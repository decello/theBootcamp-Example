
<%- include("partials/header") %>
<h1> POSTS </h1>


<form action="/addLove" method="POST">

    <input type="text" name="newLove" placeholder="name">
    <button>I made a new love</button>

</form>

<p>using for</p>

<% for(var i=0; i < posts.length;i++){ %>
    <li>

        <%= posts[i].title %> - <%= posts[i].author %>
    </li>

<%  }  %>
<br>
<% for(var i=0; i < love.length;i++){ %>
    <li>
        <%= love[i] %>
    </li>

<%  }  %>




<p>using forEach</p>
<% posts.forEach(function (post) { %>
    <li>
        <%=  post.title  %> - <strong><%= post.author %></strong>
    </li>
<% }) %>





